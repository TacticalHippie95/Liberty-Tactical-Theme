{"components/gordonbyte/common/newsletter/subscription-form":"<div class=\"newsletter-info\">\n  {{#if theme_settings.gb-popup-headertext}}\n    <h3 class=\"footer-info-heading\">{{ theme_settings.gb-popup-headertext }}</h3>\n  {{/if}}\n\n  {{#if theme_settings.gb-popup-descriptiontext }}\n    <p>{{ theme_settings.gb-popup-descriptiontext }}</p>\n  {{/if}}\n</div>\n\n<div class=\"newsletter-form-field\">\n  <form class=\"form\" action=\"{{urls.subscribe.action}}\" method=\"post\">\n      <fieldset class=\"form-fieldset\">\n          <input type=\"hidden\" name=\"action\" value=\"subscribe\">\n          <input type=\"hidden\" name=\"nl_first_name\" value=\"bc\">\n          <input type=\"hidden\" name=\"check\" value=\"1\">\n          <div class=\"form-field\">\n              <label class=\"form-label is-srOnly\" for=\"nl_email\">{{lang 'common.email_address'}}</label>\n              <div class=\"form-prefixPostfix wrap\">\n                  <input class=\"form-input\"\n                         id=\"nl_email\"\n                         name=\"nl_email\"\n                         type=\"email\"\n                         value=\"{{customer.email}}\"\n                         placeholder=\"{{lang 'newsletter.email_placeholder'}}\"\n                         aria-describedby=\"alertBox-message-text\"\n                         aria-required=\"true\"\n                  >\n                  <button class=\"button btn button--primary style-action\" type=\"submit\" name=\"button\"><span>{{lang 'newsletter.subscribe_submit'}}</span></button>\n              </div>\n              {{#if settings.show_newsletter_summary }}\n                  <div class=\"footer-newsletter-summary\">{{settings.newsletter_summary}}</div>\n              {{/if}}\n          </div>\n      </fieldset>\n  </form>\n</div>\n"}
